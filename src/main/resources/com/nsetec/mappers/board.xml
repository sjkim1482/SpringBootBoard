	<!-- 게시글 전체개수 -->
	<select id="postListCnt" resultType="int" parameterType="pageVo">
		SELECT
		COUNT(*)
		FROM post
		WHERE board_no = #{board_no}
	</select>

	<!-- 게시글 조회 -->
	<select id="postView" parameterType="int" resultType="postVo">
		SELECT
		post_no
		,title
		,cont
		,reg_dt
		,views
		,del_code
		,board_no
		,user_id
		,pre_post_no
		FROM post
		WHERE post_no = #{post_no}
	</select>

	<!-- 게시글 조회수 증가 -->
	<update id="viewsPlus" parameterType="int">
		UPDATE post SET views =
		views + 1
		WHERE post_no = #{post_no}
	</update>

	<!-- 답글등록 -->
	<insert id="insertReply" parameterType="postVo">
		INSERT INTO
		post(POST_NO
		,TITLE
		,CONT
		,REG_DT
		,VIEWS
		,DEL_CODE
		,BOARD_NO
		,USER_ID
		,PRE_POST_NO)
		VALUES(post_seq.nextVal
		,#{title }
		,#{cont }
		,sysdate
		,0
		,1
		,#{board_no }
		,#{user_id}
		,#{pre_post_no})
	</insert>

	<!-- 유저 등록 -->
	<insert id="registUser" parameterType="userVo">
		INSERT

		INTO b_user
		(USER_ID
		,PASS
		,USER_NAME
		,AGE
		,GENDER
		,ADMIN_CODE)
		
		VALUES

		(#{user_id }
		,#{pass }
		,#{user_name}
		,#{age }
		,#{gender }
		,0)
	</insert>

	<!-- 아이디 중복확인 -->
	<select id="checkUserId" parameterType="String" resultType="int">
		SELECT COUNT(*)
		FROM b_user
		WHERE user_id = #{user_id}
	</select>

	<!-- 파일업로드 -->
	<insert id="insertFile" parameterType="fileVo">
		INSERT INTO ATTACH_FILE
		(FILE_NO
		,FILE_NM
		,FILE_ROUTE
		,DEL_CODE
		,POST_NO)
		
		VALUES
		(file_seq.nextVal
		,#{file_nm }
		,#{file_route}
		,1
		,#{post_no})
	</insert>

	<select id="maxPostno" resultType="int">
		SELECT MAX(post_no)
		FROM post
	</select>








